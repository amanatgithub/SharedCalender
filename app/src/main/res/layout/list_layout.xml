<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/list_layout">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:padding="4dp" />

            <TextView
                android:id="@+id/textViewClubName"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/imageView"
                android:layout_marginTop="0dp"
                android:paddingLeft="0.5dp"
                android:text="CYBERLABS"
                android:textAllCaps="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewEventName"
                android:layout_width="213dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textViewClubName"
                android:layout_alignStart="@+id/textViewClubName"
                android:layout_below="@+id/textViewClubName"
                android:padding="2dp"
                android:text="Android Workshop"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#080808"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewParticipators"
                android:layout_width="201dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="20dp"
                android:background="@color/colorPrimary"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="Everyone"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDateAndTime"
                android:layout_width="208dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textViewParticipators"
                android:layout_alignLeft="@+id/textViewClubName"
                android:layout_alignStart="@+id/textViewClubName"
                android:text="Date and Time"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textSize="14sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>